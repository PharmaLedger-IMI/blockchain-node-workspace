{
    "workDir": ".",
    "dependencies": [
        {
            "name": "privatesky",
            "src": "https://github.com/PrivateSky/psk-release.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd privatesky && npm install"
                }
            ]
        },
        {
            "name": "ethereum-anchoring",
            "src": "https://github.com/PharmaLedger-IMI/ethadapter.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd ethereum-anchoring/EthAdapter && npm install"
                }
            ]
        }
    ],
    "deploy-blockchain2":[
        {
            "name": "quorum-docker",
            "src": "https://github.com/PharmaLedger-IMI/quorum-docker.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd quorum-docker/template && npm install"
                }
            ]
        },
        {
            "name": "patch goQuorum",
            "src": ".",
            "actions": [
                {
                    "type": "copy",
                    "src": "./tmp/docker-compose.yml",
                    "target": "./quorum-docker/quorum/docker-compose.yml",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "copy",
                    "src": "./ethereum-anchoring/SmartContracts/contracts/anchoringSC.sol",
                    "target": "./quorum-docker/template/anchoring-sc/anchoringSC.sol",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
        {
            "name": "start goQuorum",
            "src": ".",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "cd quorum-docker/quorum && docker-compose pull && docker-compose up -d"
                }
            ]
        },
        {
            "name": "Setup Organization & smart contract",
            "src": ".",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "cd quorum-docker/template && node ./stages/OrgAcc/stage.js"
                },
                {
                    "type": "execute",
                    "cmd": "cd quorum-docker/template && node ./stages/deployAnchoringSC/stage.js"
                },
                {
                    "type": "copy",
                    "src": "./quorum-docker/template/stages/OrgAcc/orgAcc.json",
                    "target": "./quorum-docker/ethAdapter/orgAcc.json",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "copy",
                    "src": "./quorum-docker/template/stages/deployAnchoringSC/anchoringSCInfo.json",
                    "target": "./quorum-docker/ethAdapter/anchoringSCInfo.json",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
        {
            "name": "Setup Smart Contract",
            "src": ".",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "cd quorum-docker/template && node ./stages/deployAnchoringSC/stage.js"
                }
            ]
        }
    ],
    "deploy-blockchain": [
        {
            "name": "create quorum compose file",
            "src": ".",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "npx quorum-wizard generate --config ./tmp/blockchain-config.json"
                }
            ]
        },
        {
            "name": "patch and build dockers",
            "actions": [
                {
                    "type": "copy",
                    "src": "./patches/ethereum-anchoring",
                    "target": "./ethereum-anchoring",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        }
    ]
}
