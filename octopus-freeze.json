{
    "workDir": ".",
    "dependencies": [
        {
            "name": "privatesky",
            "src": "https://github.com/PrivateSky/psk-release.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false,
                    "commit": "db2b2741e5ff04b6f65f8cdc94dc978d75def2ae"
                },
                {
                    "type": "execute",
                    "cmd": "cd privatesky && npm install"
                }
            ]
        },
        {
            "name": "ethereum-anchoring",
            "src": "https://github.com/PharmaLedger-IMI/ethereum-anchoring.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false,
                    "commit": "aa70c71e5d03c3dbf2c66a81437d5120460130e2"
                },
                {
                    "type": "execute",
                    "cmd": "cd ethereum-anchoring/ApiAdaptor && npm install"
                },
                {
                    "type": "execute",
                    "cmd": "cd ethereum-anchoring/SmartContract && npm install"
                }
            ]
        }
    ],
    "deploy-blockchain": [
        {
            "name": "clear previous installment",
            "src": ".",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "npx rimraf network"
                },
                {
                    "type": "execute",
                    "cmd": "npx rimraf tmp"
                }
            ]
        },
        {
            "name": "patch config files",
            "src": ".",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "node bin/build-blockchain-configs.js"
                }
            ]
        },
        {
            "name": "create quorum compose file",
            "src": ".",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "npx quorum-wizard generate --config ./tmp/blockchain-config.json"
                }
            ]
        },
        {
            "name": "patch and build dockers",
            "actions": [
                {
                    "type": "copy",
                    "src": "./patches/ethereum-anchoring",
                    "target": "./ethereum-anchoring",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "execute",
                    "cmd": "node bin/patch-network.js"
                },
                {
                    "type": "execute",
                    "cmd": "npm run node-start"
                }
            ]
        }
    ]
}